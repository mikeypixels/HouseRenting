<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rImgV"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_round"
            android:src="@drawable/two"
            android:contentDescription="@string/c" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/rTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:fontFamily="@font/apple"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Tsh"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tsh "
                    android:layout_toLeftOf="@+id/PriceTv"
                    android:fontFamily="@font/apple"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/apple"
                    android:text="Price"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/slash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" /="
                    android:layout_toRightOf="@+id/PriceTv"
                    android:fontFamily="@font/apple"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#858585"
            android:fontFamily="@font/apple"
            android:text="This will be the description of the house"
            android:textSize="15sp" />


        <!--//Root Layout-->
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="9dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!--//First layout is for rooms-->
            <LinearLayout
                android:id="@+id/room"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/room" />

                <TextView
                    android:id="@+id/rum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/apple"
                    android:text="1"
                    android:textColor="#000"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/apple"
                    android:text="House Room"
                    android:textColor="#858585"
                    android:textStyle="bold" />
            </LinearLayout>


            <!--//Second layout is for Kitchen-->
            <LinearLayout
                android:id="@+id/kati"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/kitchen" />
                <TextView
                    android:id="@+id/kicheni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/apple"
                    android:text="1"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kitchen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/apple"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:text="Kitchen"
                    android:textColor="#858585"
                    android:textStyle="bold" />
            </LinearLayout>


            <!--//Third layout is for Parking-->
            <LinearLayout
                android:id="@+id/layoutParking"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/parking" />

                <TextView
                    android:id="@+id/paking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/apple"
                    android:text="1"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/parking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/apple"
                    android:layout_marginTop="10dp"
                    android:text="Car Parking"
                    android:textColor="#858585"
                    android:textStyle="bold" />
            </LinearLayout>
